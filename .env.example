# Environment variables for Docker
# Copy this file to .env and update the values

# === Application ===
NODE_ENV=production
DEBUG=False

# === Database ===
POSTGRES_DB=thesis_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
DB_HOST=postgres
DB_PORT=5432

# === Redis ===
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://:@redis:6379/0

# === Django ===
SECRET_KEY=django-insecure-change-this-to-a-secure-random-key-in-production
DJANGO_SETTINGS_MODULE=alumni_system.settings
ALLOWED_HOSTS=localhost,127.0.0.1,backend
CORS_ALLOWED_ORIGINS=*

# === Frontend ===
VITE_API_BASE_URL=http://localhost:8000
VITE_API_URL=http://localhost:8000/api
VITE_WS_URL=ws://localhost:8000/ws/notifications/

# === Email Settings ===
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# === Django Cryptography ===
CRYPTOGRAPHY_SALT=cb9b4fd0b5c7a78d949b2118b2c43a1bed56a7cacea0559c99c8622c154f133e
